#!/usr/bin/env bash

# ltf: get the last modified file in a directory
usage ()
{
  echo
  echo "* -s: short file path; filename only"
  echo
}

fullpath=1
while getopts "s" opt; do
  case $opt in
    s) fullpath=0; shift 1 ;;
    *) echo "Invalid option" ; exit 1 ;;
  esac
done

filename=$(ls -ltr "${1}" | tail -1 | rev | cut -d' ' -f1 | rev )

if [[ $fullpath -eq 1 ]]; then
  filename="$1/$filename"
fi
echo $filename

