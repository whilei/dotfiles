main(){

  echo "Choose screen:"
  local options=("1" "2")
  select opt in "${options[@]}"; do
    case $opt in 
      "1" ) echo "Screen = $opt"; break ;;
      "2" ) echo "Screen = $opt"; break ;;
      *) echo "baddddd" && exit 1 ;;
    esac
  done

  local pics pick
  pics=$(find /home/ia/.config/awesome/themes/ia/walls -type f) &&
  pick=$(echo "$pics" | fzf +s +m -e) &&
  awesome-client "local gears = require('gears'); gears.wallpaper.fit('$pick', $opt)"
}
main
